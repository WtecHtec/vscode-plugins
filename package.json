{
    "name": "hellovsplugin",
    "displayName": "helloVsplugin",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:hellovsplugin.helloWorld",
        "onCommand:myExtension.startServer",
        "onCommand:myExtension.stopServer",
        "onCommand:myExtension.selectFilePath"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "hellovsplugin.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "myExtension.startServer",
                "title": "AC:Start Server"
            },
            {
                "command": "myExtension.stopServer",
                "title": "AC:Stop Server"
            },
            {
                "when": "editor/context && explorer/context",
                "command": "myExtension.selectFilePath",
                "title": "AC:Generate Code"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "myExtension.selectFilePath",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "myExtension.selectFilePath",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ac-status-explorer",
                    "title": "AC状态",
                    "icon": "media/dep.svg"
                }
            ]
        },
        "views": {
            "ac-status-explorer": [
                {
                    "id": "ac_status",
                    "name": "服务运行状态",
                    "contextualTitle": "状态"
                },
                {
                    "id": "ac_filepath",
                    "name": "代码文件夹",
                    "contextualTitle": "代码文件夹"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.54.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "adm-zip": "^0.5.9",
        "express": "^4.17.2",
        "js-beautify": "^1.14.0",
        "socket.io": "^4.4.1"
    }
}
